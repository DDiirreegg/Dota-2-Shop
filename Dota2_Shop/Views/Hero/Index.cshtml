@model IEnumerable<Hero>

@{
    ViewData["Title"] = "List of Hero";
}

<div class="row">
   <div class="col-md-auto offset-md-auto">
      <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.HeroImage)</th>
                    <th>@Html.DisplayNameFor(model => model.HeroName)</th>
                    <th>@Html.DisplayNameFor(model => model.HeroRole)</th>
                    @*<th>@Html.DisplayNameFor(model => model.StreghtAttributes)</th>
                    <th>@Html.DisplayNameFor(model => model.AgilityAttributes)</th>
                    <th>@Html.DisplayNameFor(model => model.IntelligenceAttributes)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstAbility)</th>
                    <th>@Html.DisplayNameFor(model => model.SecondAbility)</th>
                    <th>@Html.DisplayNameFor(model => model.ThirdAbility)</th>
                    <th>@Html.DisplayNameFor(model => model.UltimateAbility)</th>*@
                    <th>@Html.DisplayNameFor(model => model.HeroBio)</th>                     
                    <th>Actions</th>
                    
                </tr>
            </thead>
          <tbody>
              @foreach (var item in Model)
              {
                  <tr>
                      <td class="align-middle">
                            <img class="rounded float-left" src="@item.HeroImage" alt="@item.HeroName" style="max-width: 150px" />
                      </td>
                      <td class="align-middle">
                          @Html.DisplayFor(modelItem => item.HeroName)
                      </td>
                      <td class="align-middle">
                          @Html.DisplayFor(modelItem => item.HeroRole)
                      </td>
                      @*<td class="align-middle">
                          @Html.DisplayFor(modelItem => item.StreghtAttributes)
                      </td>
                      <td class="align-middle">
                          @Html.DisplayFor(modelItem => item.AgilityAttributes)
                      </td>
                      <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.IntelligenceAttributes)
                      </td>
                      <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FirstAbility)
                      </td>
                      <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.SecondAbility)
                      </td>
                      <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ThirdAbility)
                      </td>
                      <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.UltimateAbility)
                      </td>*@
                      <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.HeroBio)
                      </td>
                      <td class="align-middle form-inline">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a>                             
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                            }
                            
                        </td>
                  </tr>
              }
          </tbody>
          
      </table>
   </div>
</div>

@await Html.PartialAsync("_CreateButton", "Hero")
